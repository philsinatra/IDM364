#!/bin/bash

set -e

npx create-react-app router

cd router

echo "🚧 Cleaning unnecessary files..."
rm -rf .git
rm public/favicon.ico;
rm public/manifest.json;
rm src/*;
echo "👍 Done cleaning."

echo "🔧 Building workspace settings..."
mkdir .vscode
touch .vscode/settings.json
echo '{ "files.associations": { "**/*.js": "javascriptreact" } }' > .vscode/settings.json
echo "👍 Done building workspace settings."

echo "🏗️ Finishing up..."
echo "<!DOCTYPE html> <html lang=\"en\"> <head> <meta charset=\"UTF-8\"> <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"> <meta http-equiv=\"X-UA-Compatible\" content=\"ie=edge\"> <title>Routing</title> </head> <body> <noscript>You need JavaScript to run this application.</noscript> <div id=\"app\"></div> </body> </html>" > public/index.html
echo "🍻 Done."
echo "Opening project in editor..."

code .